# vim: set ft=sh sw=2 et :

##
## Editors
##
export EDITOR=nvim
export USE_EDITOR="$EDITOR"
export VISUAL=$EDITOR
export PAGER=less

##
## Pager
##
export PAGER=less
export LESS='-iFMRSX -x4'

##
## Config dirs
##
export CONAN_USER_HOME=$HOME/.config/conan
export CONAN_HOME=$HOME/.config/conan2
export COLIMA_HOME=$HOME/.config/colima

if [ -f "$HOME/.shell-env.local" ]; then
  . "$HOME/.shell-env.local"
fi

umask 022
