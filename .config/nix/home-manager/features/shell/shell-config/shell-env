# vim: set ft=sh sw=2 et :

##
## Editors
##
export EDITOR=nvim
export GIT_EDITOR="$EDITOR"
export USE_EDITOR="$EDITOR"
export VISUAL=$EDITOR
export PAGER=less

##
## Pager
##
export PAGER=less
export LESS='-iFMRSX -x4'

if [ -f "$HOME/.shell-env.local" ]; then
  . "$HOME/.shell-env.local"
fi

umask 022
